@model MVCStatikCV.Models.aracbilgi

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head><style>
    .custom-table {
        border-collapse: separate;
        border-spacing: 25px;
        
    }
    .my-label{
        color:#fed136
    }
</style></head>
<section style="background-color:#212529" id="portfolio">
    <div class="col-lg-12 text-center" style="margin-bottom:5%; margin-top:5%; padding-left:10%;padding-right:10%">
        <h2 class="section-heading bg-light">DETAYLAR</h2>
    </div>
    <div class="container">
        <div class="row">
        <div class="col-md-5">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Html.DisplayFor(model => model.foto1)" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Html.DisplayFor(model => model.foto2)" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Html.DisplayFor(model => model.foto3)" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Html.DisplayFor(model => model.foto4)" alt="Fourth slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Html.DisplayFor(model => model.foto5)" alt="Fifth slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
            <div class="col-md-2"></div>
        <div class="col-md-3">
            <div class="table-hover">
                <h2 class="my-label">Araç Bilgileri</h2>
                <table class="custom-table  table-active">
                    <thead>
                        <tr>
                            <td><p class="item-intro  my-label ">Marka</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Marka)</p></td>
                            <td><p class="item-intro  my-label">Kasa Tipi</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.KasaTipi)</p></td>
                        </tr>
                        <tr>
                            <td><p class="item-intro  my-label">Seri</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Seri)</p></td>
                            <td><p class="item-intro  my-label">Motor Hacmi</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.MotorHacmi)</p></td>
                        </tr>
                        <tr>
                            <td><p class="item-intro  my-label">Model</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Model)</p></td>
                            <td><p class="item-intro  my-label">Çekiş</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Cekis)</p></td>
                        </tr>
                        <tr>
                            <td><p class="item-intro  my-label">Yıl</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Yil)</p></td>
                            <td><p class="item-intro  my-label">Renk</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Renk)</p></td>
                        </tr>
                        <tr>
                            <td><p class="item-intro  my-label">Yakıt</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Yakit)</p></td>
                            <td><p class="item-intro  my-label">Plaka</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Plaka)</p></td>
                        </tr>
                        <tr>
                            <td><p class="item-intro  my-label">Vites</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Vites)</p></td>
                            <td><p class="item-intro  my-label">Takas</p></td>
                            <td><p class="item-intro text-light">@Html.DisplayFor(model => model.Takas)</p></td>
                        </tr>


                       
                </table>
                <br />
                <p>
                    
                    <br />
                    @Html.ActionLink("Listeye Geri Dön", "Index")
                    <br />
                    @if (User.IsInRole("A"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
                    }

                </p>
            </div>
            </div>
        </div>
    </div>
</section>
        
        

         
      
